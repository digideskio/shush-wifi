<resources>

  <style name="ShushTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>

  <style name="ClickableDialogText" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">#181818</item>
    <item name="android:padding">@dimen/holo_gap</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginTop">@dimen/holo_gap</item>
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="DialogHeaderText" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/holo_gap_large</item>
    <item name="android:layout_marginLeft">@dimen/holo_gap_large</item>
    <item name="android:layout_marginRight">@dimen/holo_gap_large</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
